@using EntityLayer.Concrete
@model IEnumerable<Deliver>
@{ ViewBag.Title = "AdminDeliverIndex";
    Layout = "~/Views/Shared/_SiteLayout.cshtml"; 
    }
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><strong>Zimmetler</strong></h3>
        <br />

        <div class="card-tools">
            <a class="btn btn-outline-primary btn-sm" href="/AdminDeliver/AddDeliver/">
                <i class="fas fa-sync-alt fa-spin">
                </i>
                Yeni Zimmet
            </a>
            <button type="button" class="btn btn-outline-primary" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        
                    </th>
                    <th>
                        Tarih
                    </th>
                    <th>
                        Ad Soyad
                    </th>
                    <th>
                        Durum
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <img class="table-avatar" src="@item.DeliverImagePath" alt="Feza">
                            </li>
                        </ul>
                    </td>
                    <td>
                        @(((DateTime)item.DeliverDate).ToString("dd MMM yyyy hh:mm"))
                    </td>
                    <td>
                        @item.User.UserName  @item.User.UserLanstName
                    </td>
                    <td>
                        @if (@item.DeliverStatus == Status.Aktif)
                        {
                <span class="badge badge-success">@item.DeliverStatus</span> }
            else
            {
                <span class="badge badge-danger">@item.DeliverStatus</span>}
                    </td>

                    <td class="project-actions text-right">

                        <a class="btn btn-info btn-sm" href="/AdminDeliver/EditDeliver/@item.DeliverID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Güncelle
                        </a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>