@using EntityLayer.Concrete
@model IEnumerable<Category>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml"; }
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><strong>Kategoriler</strong></h3>
        <br />
        
        <div class="card-tools">
            <a class="btn btn-outline-primary btn-sm" href="/AdminCategory/AddCategory/">
                <i class="fas fa-sync-alt fa-spin">
                </i>
                Kategori Ekle
            </a>
            <button type="button" class="btn btn-outline-primary"" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        Kategori Adı
                    </th>
                    <th>
                        Durum
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @item.CategoryName
        </td>

        <td>
            @if (@item.CategoryStatus == Status.Aktif)
            {
<span class="badge badge-success">@item.CategoryStatus</span> }
else
{
<span class="badge badge-danger">@item.CategoryStatus</span>}
        </td>
        <td class="project-actions text-right">

            <a class="btn btn-info btn-sm" href="/AdminCategory/EditCategory/@item.CategoryID">
                <i class="fas fa-pencil-alt">
                </i>
                Güncelle
            </a>
        </td>
    </tr>
}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>