@model EntityLayer.Concrete.Title
@{
    ViewBag.Title = "AddTitle";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<h1>Yeni Departman Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddTitle", "AdminTitle", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Görev Adı")
        @Html.TextBoxFor(x => x.TitleName, new { @class = "form-control", required = "required" })
        @*@Html.ValidationMessageFor(x => x.CategoryName)*@
        <br /><br />
        @Html.Label("Durum")
        @Html.EnumDropDownListFor(x => x.Status, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-info" id="kaydet">Kaydet</button>
    </div>
}
<script>
    $('#kaydet').click(function () {
        swal("Tebrikler", "Yeni görev eklendi!", "success");
    });</script>
