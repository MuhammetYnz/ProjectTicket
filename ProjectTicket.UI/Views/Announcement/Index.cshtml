@using EntityLayer.Concrete
@model IEnumerable<Announcement>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_SiteLayout.cshtml"; }
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><strong>Duyuru</strong></h3>

        <div class="card-tools">
            <button type="button" class="btn btn-outline-primary" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    @*<div class="row">
            <input id="myInput" class="form-control" type="text" placeholder="Ara..">
        </div>*@
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        Resim
                    </th>
                    <th>
                        Tarih
                    </th>
                    <th>
                        Duyuru
                    </th>
                    <th>
                        Duyuru Detay
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
    <tr>
        <td>
            <ul class="list-inline">
                <li class="list-inline-item">
                    @if (item.AnnouncementImage != null)
                    {
                <img alt="Avatar" class="table-avatar" src="@item.AnnouncementImage"> }
                    else
                    {
                <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4/dist/img/Wallpaper.png" alt="Feza">
                    }
                </li>
            </ul>
        </td>
        <td align="left">
            @(((DateTime)item.AnnouncementDate).ToString("dd MMM yyyy hh:mm"))
        </td>
        <td align="left">
            @item.AnnouncementName
        </td>
        <td>
            @if (item.AnnouncementContent.Length > 100)
            {
               @Html.Raw(@item.AnnouncementContent.Substring(0, 100)) <a>...</a>
                
            }
            else
            {
               @Html.Raw(@item.AnnouncementContent)
            }

        </td>
    
            <td class="project-actions @*text-right*@">

            <a class="btn btn-warning btn-sm" href="/Announcement/AnnouncementDetail/@item.AnnouncementID">
                <i class="fas fa-angle-double-left">
                </i>
                Detay
            </a>
    </tr>}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
