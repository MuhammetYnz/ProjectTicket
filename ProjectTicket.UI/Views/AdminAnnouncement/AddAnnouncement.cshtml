@model EntityLayer.Concrete.Announcement
@{
    ViewBag.Title = "AddAnnouncement";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<h1>Yeni Duyuru Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddAnnouncement", "AdminAnnouncement", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br /><br />

        @Html.Label("Duyuru Adı")
        @Html.TextBoxFor(x => x.AnnouncementName, new { @class = "form-control" })

        <br /><br />
        @Html.Label("DUyuru")
        @Html.TextBoxFor(x => x.AnnouncementContent, new { @class = "form-control" })

        <br /><br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.AnnouncementDate, new { @class = "form-control" })
        <br /><br />

        @Html.Label("Durum")
        @Html.EnumDropDownListFor(x => x.AnnouncementStatus, new { @class = "form-control" })
        <br /><br />

        <button class="btn btn-info"  id="kaydet">Kaydet</button>
    </div>}
<script>
    $('#kaydet').click(function () {
        swal("Tebrikler", "Yeni kategori eklendi!", "success");
    });</script>