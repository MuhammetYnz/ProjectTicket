@using EntityLayer.Concrete
@model List<Title>
@{ ViewBag.Title = "TitleIndex";
                Layout = "~/Views/Shared/_SiteLayout.cshtml"; }

<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><strong>Kullanıcı Görevleri</strong></h3>
        <br />
        <a class="btn btn-primary btn-sm" href="/AdminTitle/AddTitle/">
            <i class="fas fa-folder">
            </i>
            Görev Ekle
        </a>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        Görev Adı
                    </th>
                    <th>
                        Durum
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.TitleName
                    </td>

                    <td>
                        @if (@item.Status == Status.Aktif)
                        {
                <span class="badge badge-success">@item.Status</span> }
            else
            {
                <span class="badge badge-danger">@item.Status</span>}
                    </td>
                    <td @*class="project-actions text-right"*@>

                        <a class="btn btn-info btn-sm" href="/AdminTitle/EditTitle/@item.TitleID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Güncelle
                        </a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>